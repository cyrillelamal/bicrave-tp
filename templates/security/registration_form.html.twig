{{ form_start(form) }}

{# email #}
<div class="field">
    {{ form_label(form.email, null, {'label_attr': {'class': 'label'}} ) }}
    {{ form_widget(form.email, {'attr': {
        'class': 'input'
    }}) }}
    <div class="help is-danger">
        {{ form_errors(form.email) }}
    </div>
</div>

{# password #}
<div class="field">
    {{ form_label(form.plainPassword, null, {'label_attr': {'class': 'label'}} ) }}
    {{ form_widget(form.plainPassword, {'attr': {
        'class': 'input'
    }}) }}
    <div class="help is-danger">
        {{ form_errors(form.plainPassword) }}
    </div>
</div>

{# terms #}
<div class="field">
    <div class="control">
        {{ form_label(form.agreeTerms, null, {
            'label_attr': {
                'class': 'checkbox'
            }
        }) }}
        {{ form_widget(form.agreeTerms) }}
    </div>
</div>

{# submit #}
<div class="field is-grouped">
    <div class="control">
        <button class="button is-primary" type="submit">{{ 'security.registration_form.submit'|trans }}</button>
    </div>
</div>

{{ form_end(form) }}